<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PathfindersClubApp.Views.AboutPage">
    <Page.Resources>
        <Style x:Key="AboutText" TargetType="Label">
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="TextColor" Value="Black"/>            
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
        </Style>
    </Page.Resources>
    <StackLayout Padding="30">
        <Label Text="Atalaia Internacional" HorizontalTextAlignment="Center"/>
        <Label x:Name="aboutTxtIntroductionOne" Style="{StaticResource AboutText}"/>
        <Label x:Name="aboutTxtIntroductionTwo" Style="{StaticResource AboutText}"/>
        <Label Text="Camporis Participados" HorizontalTextAlignment="Center"/>
        <Label x:Name="aboutTxtCamporis" />
    </StackLayout>  
</ContentPage>