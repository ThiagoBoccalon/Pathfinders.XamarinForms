                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <custom:CircleImage Grid.Column="1"
                                            Source="director_2005.png" 
                                            BorderColor="#03bc9d"
                                            BorderThickness="2"/>
